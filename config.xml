<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.chamilo.app" version="1.1.0">
    <name>Chamilo Mobile</name>
    <description>
        Chamilo Mobile App is a multi-mobile-OS application that allows you access to Chamilo LMS's plattform.
    </description>
    <author email="info@beeznest.com" href="https://beeznest.com">
        BeezNest
    </author>    
    <author email="info@nosolored.com" href="https://www.nosolored.com">
        Nosolored
    </author>
    <icon src="www/img/logo.png" />
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <preference name="android-targetSdkVersion" value="17"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
